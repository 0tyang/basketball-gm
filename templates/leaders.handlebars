<script type="text/javascript">
$(document).ready(function() {
  bbgm.dropdown($("#leaders_select_season"));
});
</script>

<form action="/l/{{g.lid}}/leaders" method="GET" class="form-inline pull-right">
  <select id="leaders_select_season" name="season" class="season">
    {{#seasons}}
      <option value="{{season}}"{{#if selected}} selected="selected"{{/if}}>{{season}} season</option>
    {{/seasons}}
  </select>
</form>

<h1>League Leaders</h1>

<p></p>
<div class="row-fluid">
  {{#categories}}
    {{#if newRow}}
</div>
<p></p>
<div class="row-fluid">
    {{/if}}
    <div class="span4">
      <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered table-condensed leaders">
      <thead>
        <tr><th>{{name}}</th><th title="{{title}}">{{stat}}</th></tr>
      </thead>
      <tbody>
        {{#data}}
          <tr{{#if userTeam}} class="alert-info"{{/if}}><td>{{i}}. <a href="/l/{{../../g.lid}}/player/{{pid}}">{{name}}</a>, <a href="/l/{{../../g.lid}}/roster/{{abbrev}}/{{../../season}}">{{abbrev}}</a></td><td>{{round stat 1}}</tr>
        {{/data}}
      </tbody>
      </table>
    </div>
  {{/categories}}
</div>